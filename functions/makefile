NAME = lib
CC = cc
CFLAGS = -Wall -Wextra -Werror
AR = ar rcs
SRC = main.c ft_isalpha.c ft_isdigit.c ft_isalnum.c ft_isascii.c ft_isprint.c ft_strlen.c ft_memset.c ft_bzero.c ft_memcpy.c ft_memmove.c ft_strlcpy.c ft_strlcat.c ft_toupper.c ft_tolower.c ft_strchr.c ft_strrchr.c ft_strncmp.c ft_memchr.c ft_memcmp.c ft_strnstr.c ft_atoi.c
OBJ = $(SRC: .c=.o)
RM = rm -f

all: $(NAME)
%.o: %.c
	$(CC) = $(CFLAGS) -c $< -o $@
$(NAME): $(OBJ)
	$(AR) $(NAME) $(OBJ)
$(NAME): $(OBJ)
	$(CC) $(CFLAGS) -o $@ $^
clean:
	$(RM) $(OBJ)
fclean: clean
	$(RM) $(NAME)
re: fclean all 